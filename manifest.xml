<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="MailApp"
  Version="1.0.0.0"
  ProviderName="AMX"
  DefaultLocale="en-US"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:schemaLocation="http://schemas.microsoft.com/office/appforoffice/1.1 MailAppVersionOverrides.xsd"
  Id="d2b3be3e-1111-4abc-9f77-000000000001"
  FullName="Create Quote"
  DisplayName="Create Quote"
  Description="Create a quote from the current email.">
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.3">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://jeremyib.github.io/Email-To-HTML-Sender/commands.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadItem</Permissions>

  <VersionOverrides xsi:type="ov:MailAppVersionOverrides" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" Version="1.0">
    <ov:Requirements>
      <ov:Sets DefaultMinVersion="1.10">
        <ov:Set Name="Mailbox"/>
      </ov:Sets>
    </ov:Requirements>

    <ov:Hosts>
      <ov:Host xsi:type="ov:Mailbox">
        <ov:DesktopFormFactor>
          <ov:FunctionFile resid="residFunctionFileUrl"/>
          <ov:ExtensionPoint xsi:type="MessageReadCommandSurface">
            <ov:OfficeTab id="TabDefault">
              <ov:Group id="msgReadGroup" label="Quote">
                <ov:Control xsi:type="ov:Button" id="createQuoteButton">
                  <ov:Label resid="residButtonLabel"/>
                  <ov:Supertip>
                    <ov:Title resid="residButtonLabel"/>
                    <ov:Description resid="residButtonDesc"/>
                  </ov:Supertip>
                  <ov:Icon>
                    <ov:bt:Image size="16" resid="residIcon16"/>
                    <ov:bt:Image size="32" resid="residIcon32"/>
                    <ov:bt:Image size="80" resid="residIcon80"/>
                  </ov:Icon>
                  <ov:Action xsi:type="ExecuteFunction">
                    <ov:FunctionName>createQuote</ov:FunctionName>
                  </ov:Action>
                </ov:Control>
              </ov:Group>
            </ov:OfficeTab>
          </ov:ExtensionPoint>
        </ov:DesktopFormFactor>
      </ov:Host>
    </ov:Hosts>

    <ov:Resources>
      <ov:Images>
        <ov:Image id="residIcon16" DefaultValue="https://jeremyib.github.io/Email-To-HTML-Sender/icon16.png"/>
        <ov:Image id="residIcon32" DefaultValue="https://jeremyib.github.io/Email-To-HTML-Sender/icon32.png"/>
        <ov:Image id="residIcon80" DefaultValue="https://jeremyib.github.io/Email-To-HTML-Sender/icon80.png"/>
      </ov:Images>
      <ov:Urls>
        <ov:Url id="residFunctionFileUrl" DefaultValue="https://jeremyib.github.io/Email-To-HTML-Sender/commands.html"/>
      </ov:Urls>
      <ov:ShortStrings>
        <ov:String id="residButtonLabel" DefaultValue="Create Quote"/>
      </ov:ShortStrings>
      <ov:LongStrings>
        <ov:String id="residButtonDesc" DefaultValue="Send this email's HTML to the Quote API."/>
      </ov:LongStrings>
    </ov:Resources>
  </VersionOverrides>
</OfficeApp>
